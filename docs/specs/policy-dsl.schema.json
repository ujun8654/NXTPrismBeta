{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nxtprism.io/schemas/policy-dsl/v1.0",
  "title": "NXTPrism Policy DSL v1.0",
  "description": "정책 정의 포맷. 버전 관리되는 결정적(deterministic) 평가 규칙.",

  "type": "object",
  "required": ["policy_id", "version", "name", "rules", "metadata"],
  "properties": {
    "policy_id": {
      "type": "string",
      "description": "정책 고유 ID"
    },
    "version": {
      "type": "string",
      "pattern": "^v\\d+\\.\\d+\\.\\d+$",
      "description": "정책 버전 (semver: v1.0.0)"
    },
    "name": {
      "type": "string",
      "description": "정책 이름"
    },
    "description": {
      "type": "string"
    },
    "scope": {
      "type": "object",
      "description": "정책 적용 범위",
      "properties": {
        "asset_types": { "type": "array", "items": { "type": "string" } },
        "tenants": { "type": "array", "items": { "type": "string" } },
        "state_machines": { "type": "array", "items": { "type": "string" } }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["rule_id", "condition", "action"],
        "properties": {
          "rule_id": { "type": "string" },
          "name": { "type": "string" },
          "priority": { "type": "integer", "minimum": 0, "description": "숫자가 낮을수록 우선" },
          "condition": {
            "type": "object",
            "description": "평가 조건 (AND/OR/비교)",
            "required": ["operator"],
            "properties": {
              "operator": {
                "type": "string",
                "enum": ["AND", "OR", "GT", "GTE", "LT", "LTE", "EQ", "NEQ", "IN", "NOT_IN"]
              },
              "field": { "type": "string", "description": "평가 대상 필드 경로 (예: input.soh)" },
              "value": { "description": "비교 값" },
              "operands": {
                "type": "array",
                "items": { "$ref": "#/properties/rules/items/properties/condition" },
                "description": "AND/OR일 때 하위 조건들"
              }
            }
          },
          "action": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["ALLOW", "DENY", "RESTRICT", "REQUIRE_ATTESTATION", "ESCALATE"]
              },
              "params": { "type": "object", "additionalProperties": true }
            }
          },
          "evidence_requirements": {
            "type": "array",
            "items": { "type": "string" },
            "description": "이 규칙 적용 시 필요한 증거 유형"
          },
          "attestation_requirements": {
            "type": "array",
            "items": { "type": "string" },
            "description": "이 규칙 적용 시 필요한 승인 역할"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["created_at", "created_by"],
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "created_by": { "type": "string" },
        "authority_profile": { "type": "string", "description": "관할 프로파일 (예: FAA, EASA, MOLIT)" },
        "references": {
          "type": "array",
          "items": { "type": "string" },
          "description": "근거 문서 참조 URI 목록"
        }
      }
    }
  }
}
